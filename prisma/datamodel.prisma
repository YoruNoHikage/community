type User {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  email: String! @unique
  avatar: [Image!]
  person: Person
}

type Person {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  user: User
  name: String!
  structures: [Structure!]
  games: [Game!]
  events: [Event!]
}

enum StructureType {
  STUDIO
  ASSOCIATION
  ORGANISATION
}

type Structure {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  type: StructureType!
  name: String!
  about: String!
  location: Location!
  people: [Person!]
  structures: [Structure!]
  images: [Image!]
  games: [Game!]
  events: [Event!]
}

type Game {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  releasedAt: DateTime
  name: String!
  about: String!
  authors: [Person!]
  structures: [Structure!]
  images: [Image!]
  events: [Event!]
}

type Event {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  name: String!
  about: String!
  start: DateTime!
  end: DateTime!
  location: Location
  images: [Image!]
  authors: [Person!]
  structures: [Structure!]
  games: [Game!]
}

type Image {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  filename: String!
  mimetype: String!
}

type Location {
  country: String!
  city: String!
  latitude: Float!
  longitude: Float!
  structures: [Structure!]
  events: [Event!]
}